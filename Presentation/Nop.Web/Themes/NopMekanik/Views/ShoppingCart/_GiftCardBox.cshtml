@model ShoppingCartModel.GiftCardBoxModel
@if (Model.Display)
{
    <div class="giftcard-box">
        <div class="coupon-code">
            <div class="input-group form-control">
                    <input name="giftcardcouponcode" id="giftcardcouponcode" type="text" class="gift-card-coupon-code" aria-label="@T("ShoppingCart.GiftCardCouponCode.Label")" />
                <div class="btn-group">
                    <button class="btn button-1 apply-gift-card-coupon-code-button" type="submit" name="applygiftcardcouponcode" id="applygiftcardcouponcode" 
                           value="@T("ShoppingCart.GiftCardCouponCode.Button")">@T("ShoppingCart.GiftCardCouponCode.Button")
                    </button>
                </div>
            </div>
        </div>
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="@(Model.IsApplied ? "message-success" : "message-failure")">
                @Model.Message
            </div>
        }
    </div>
    <script asp-location="Footer">
        $(document).ready(function () {
            $('#giftcardcouponcode').on('keydown', function (event) {
                if (event.keyCode == 13) {
                    $('#applygiftcardcouponcode').trigger("click");
                    return false;
                }
            });
        });
    </script>
}